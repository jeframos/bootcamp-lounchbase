{% extends "layout.njk" %}

    {% block head %}
        <title>{{item.title}}</title>
    {% endblock %}

    {% block content %}
    <div class="recipe">

        <div class="recipe-header">
            <img src="{{item.image}}" alt="{{item.title}}">
            <div class="description_recipe_1">
                <h1>{{item.title}}</h1>
                <h2>por {{item.author}}</h2>
            </div>
        </div>

        <div class="recipe-content">
            <div id="ingredients" class="topic">
                <div class="description_recipe_2">
                    <h3>ingredientes</h3>
                    <h4>ESCONDER</h4>
                </div>
                <div class="topic-content">
                    <ul>
                        {% for ingredient in item.ingredients %}
                        <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div id="preparation" class="topic">
                <div class="description_recipe_2">
                    <h3>Modo de Preparo</h3>
                    <h4>MOSTRAR</h4>
                </div>    
                <div class="topic-content">
                    <ul>
                        {% for preparation in item.preparation %}
                        <li>{{preparation}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div  id="information" class="topic">
                <div class="description_recipe_2">
                    <h3>Informações adicionais</h3>
                    <h4>ESCONDER</h4>
                </div>
                <div class="topic-content">
                    <p>{{item.information}}</p>
                </div>
            </div>
        </div>
    </div>
    {% endblock content %}