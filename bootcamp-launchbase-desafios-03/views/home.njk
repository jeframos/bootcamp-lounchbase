{% extends "layout.njk" %}

{% block content %}
<section class="hero">
    <div class="intro">
        <h1>
            As melhores receitas
        </h1>
        <p>
            Aprenda a construir os melhores pratos
            com receitas criadas por profissionais
            do mundo inteiro.
        </p>
    </div>
    <img src="assets/chef.png" alt="">
</section>

<main>
    <h2>
        Mais acessadas
    </h2>

    <div class="content">
        {% for item in items %}
        <div class="card">
            <img src="{{item.image}}" alt="{{item.title}}">
            <h4>{{item.title}}</h4>
            <p>por {{item.author}}</p>
        </div>
        {% endfor %}
    </div>
</main>
{% endblock %}